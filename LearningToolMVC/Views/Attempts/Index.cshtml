@model LearningToolMVC.Models.AttemptModel

<br />
<div class="col-12 p-0 mb-3">
    <div class="float-left mr-3">
        <h2>Try your skill</h2>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Definitions" class="btn btn-info text-white">
            Add More
        </a>
    </div>
</div>


    <div class="border container shadow" style="padding:30px;">
        <form method="post" asp-action="Index">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Definition.Id" />
            <input type="hidden" asp-for="Definition.Sentence" />

            <div class="text-danger"></div>
            <div class="form-group row">

                <div class="col-5">
                    <label>Sentence</label>
                    <input class="form-control" value="@Model.Definition.Sentence" disabled />
                </div>
                <div class="col-2 text-center mt-2">
                    <br />
                    <strong>=</strong>
                </div>
                <div class="col-5">
                    <label>Meaning</label>
                    <input asp-for="Attempt" class="form-control text-center" />
                    <span asp-validation-for="Attempt" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4 mt-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Check
                    </button>
                </div>
            </div>
        </form>
    </div>


    <div class="col-12 border p-3 shadow" style="margin-top:50px;">
        <table id="DT_load" class="table table-stripped table-borderless text-capitalize" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Sentence</th>
                    <th>Attempt</th>
                    <th>Meaning</th>
                    <th>Is Correct</th>
                </tr>
            </thead>
        </table>
    </div>


    @section Scripts {
        <script src="~/js/attemptsList.js"></script>
        <partial name="_ValidationScriptsPartial" />
    }
